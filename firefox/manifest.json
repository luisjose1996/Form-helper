{
  "name": "Former2 Helper",
  "version": "0.2",
  "manifest_version": 2,
  "description": "Helps avoid CORS issues with former2.com",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "background":  {
    "scripts": [
      "aws-sdk-2.412.0.min.js",
      "bg.js"
    ]
  },
  "icons": {
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://former2.com/*",
        "https://www.former2.com/*",
        "http://127.0.0.1/*",
        "https://127.0.0.1/*"
      ],
      "js": [
        "content-script.js"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "https://*.aws.amazon.com/*",
    "https://*.amazonaws.com/*",
    "https://developer.amazon.com/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "former2-ext-support@ianmckay.com.au"
    }
  }
}

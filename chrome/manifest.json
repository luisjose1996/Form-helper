{
  "name": "Former2 Helper",
  "version": "0.5",
  "manifest_version": 2,
  "description": "Helps avoid CORS issues with former2.com",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "background":  {
    "scripts": [
      "aws-sdk-2.449.0.min.js",
      "bg.js"
    ]
  },
  "icons": {
    "128": "icon-128.png"
  },
  "permissions": [
    "https://*.aws.amazon.com/*",
    "https://*.amazonaws.com/*",
    "https://developer.amazon.com/*"
  ],
  "externally_connectable": {
    "matches": [
      "https://former2.com/*",
      "https://*.former2.com/*",
      "http://127.0.0.1/*",
      "https://127.0.0.1/*",
      "http://localhost/*",
      "https://localhost/*"
    ]
  }
}
